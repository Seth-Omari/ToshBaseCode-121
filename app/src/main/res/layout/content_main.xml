<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ke.co.laysan.tosh.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ke.co.toshngure.basecode.view.BaseDashboardItemView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:itemIcon="@drawable/ic_keyboard_black_24dp"
            app:itemIconBackground="@color/colorPrimaryDark"
            app:itemIconSize="100dp"
            app:itemIconTint="@color/colorAccent"
            app:itemTitle="@string/app_name"
            app:itemTitleColor="@android:color/black" />

        <ke.co.toshngure.basecode.view.BaseDashboardItemView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:itemIcon="@drawable/ic_keyboard_black_24dp" />


        <ke.co.toshngure.basecode.view.BaseDashboardItemView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:itemIcon="@drawable/ic_keyboard_black_24dp" />

    </LinearLayout>


</LinearLayout>
